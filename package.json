{
  "name": "corgi-icode",
  "author": "xluoyu",
  "description": "可视化的代码模板生成器",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run -C packages/ui dev",
    "build": "pnpm run -C packages/ui build",
    "preview": "pnpm run -C packages/ui preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "husky install",
    "commit": "cz"
  },
  "dependencies": {
    "@corgi-icode/element-plus": "workspace:*",
    "@corgi-icode/core": "workspace:*",
    "@vueuse/core": "^8.9.4",
    "lodash-es": "^4.17.21",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.20.7",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@iconify-json/ep": "^1.1.6",
    "@iconify-json/iconoir": "^1.1.8",
    "@iconify-json/octicon": "^1.1.15",
    "@iconify-json/uil": "^1.1.2",
    "@iconify/json": "^2.1.86",
    "@types/node": "^17.0.45",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vue/test-utils": "^2.0.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-external-globals": "^0.6.1",
    "c8": "^7.12.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "jsdom": "^19.0.0",
    "lint-staged": "^13.0.3",
    "typescript": "^4.7.4",
    "unplugin-auto-import": "0.11.1",
    "unplugin-icons": "^0.14.8",
    "unplugin-vue-components": "^0.19.9",
    "vite": "3.0.7",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vitest": "^0.9.4",
    "vue-tsc": "^0.34.17"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,vue}": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xluoyu/code-run.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xluoyu/code-run/issues"
  },
  "homepage": "https://github.com/xluoyu/code-run#readme"
}
